
<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      {{#each error}}
        <div class="alert alert-danger" role="alert">
          {{this}}
        </div>
      {{/each}}
      {{#if msg}}
          <div class="alert alert-warning" role="alert">
            {{msg}}
          </div>
      {{/if}}
      {{#if error}}
          <div class="alert alert-danger" role="alert">
            {{error}}
          </div>
      {{/if}}
      <div class="card-header login-card-header">
        <span><img width="50px", height="50px" src="assets/img/harsac-logo.png"></span><h3>Registration Form</h3>
      </div>
      <div class="card-body">
        <form action="/registration" method="post" onsubmit="return validateForm();">
          <div class="form-group">
            <label for="name" class="input-lables">Name:</label>
            <input type="text" class="form-control" id="name" name="name">
          </div>
          <div class="form-group">
            <label for="email" class="input-lables">Email ID:</label>
            <input type="email" class="form-control" id="email", name="email">
          </div>
          <div class="form-group">
            <label for="mobile_no" class="input-lables">Mobile No:</label>
            <input type="number" class="form-control" id="mobile_no", name="mobile_no">
          </div>
          <div class="form-group">
            <label for="postname" class="input-lables">POST:</label>
            <input type="text" class="form-control" id="postname" name="postname">
          </div>
          <div class="form-group">
            <label for="usr" class="input-lables">Lab Name & Address:</label>
            <input type="text" class="form-control" id="labAdress" name="labAdress">
          </div>
          <div class="form-group">
            <label for="usr" class="input-lables">Password:</label>
            <input type="password" class="form-control" id="password" name="password">
          </div>
          <div class="form-group" >
            <label for="usr" class="input-lables">Re-Password:</label>
            <input type="password" class="form-control" id="confirm_password" name="confirm_password">
          </div>
          <div class="form-group">
            <input type="submit" value="Submit" class="btn float-right login_btn">
          </div>
        </form>
      </div>
      <div class="card-footer"><a href="/login">Login Your Account</a></div>
    </div>
  </div>
</div>